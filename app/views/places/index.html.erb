<% provide(:title, 'Places') %>
<%= yield :scripts %>
<p id="notice"><%= notice %></p>

<div class="map-container" style='width: 100%; height: 500px;'>
  <h1>World Map</h1>
  <p><strong>Right click</strong> on the map to create a new place!</p>
  <div id="geolocation" style='width: 65%; height: 100%; float: left'></div>
  <div id="user-created" style='margin-left: 70%;'>
    <center>
    <h2><strong>User Geolocation</strong></h2>
    <p><strong>Country: </strong><%= @user_location[:country_name] %></p>
    <h2><strong>User-Created Locations</strong></h2>
    <table>
      <thead>
        <tr>
         <!-- <th>Latitude</th>
         <th>Longitude</th> -->
          <th>Address</th>
          <th>Title</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @places.each do |place| %>
          <tr>
            <!-- <td><%= place.latitude %></td>
            <td><%= place.longitude %></td> -->
            <td><%= place.address %></td>
            <td><%= place.title %></td>
            <td><%= link_to 'Go here', places_choose_path(place[:id]), data: { confirm: 'Pick this location?' } %></td>
            <!-- <td><%= link_to 'Show', place %></td> -->
            <td><%= link_to 'Edit', edit_place_path(place) %></td>
            <td><%= link_to 'Destroy', place, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <!--<button><%= link_to 'New Place', new_place_path %></button>-->
    </center>
  </div>
</div>
<br>

<script src="//maps.google.com/maps/api/js?v=3.18&sensor=false&client=&key=&libraries=geometry&language=&hl=&region="></script> 
<script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/infobox/1.1.9/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->

<script charset="utf-8">
var handler = Gmaps.build('Google');
handler.buildMap({ internal: {id: 'geolocation'} }, function(){
  if(navigator.geolocation) {
    navigator.geolocation.getCurrentPosition(displayOnMap);
  }
  // handler.getMap() got it done! :)
  google.maps.event.addListener(handler.getMap(), 'rightclick', function() {
    //if (window.confirm('Click OK to create new place!')) {
        window.location.href='/places/new';
      //};
  });

});

function displayOnMap(position){
  var u_markers = handler.addMarkers(<%=raw @user_markers.to_json %>);
  var marker = handler.addMarker({
    lat: position.coords.latitude,
    lng: position.coords.longitude,
    "infowindow": "You are here!"
  });
  
  handler.map.centerOn(marker);
  handler.getMap().setZoom(10);
}
</script>