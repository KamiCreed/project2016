<% provide(:title, 'Places') %>
<p id="notice"><%= notice %></p>

<div class="map-container" style='width: 100%; height: 500px;'>
  <h1>World Map</h1>
  <div id="geolocation" style='width: 65%; height: 100%; float: left'></div>
  <div id="user-created" style='margin-left: 70%;'>
    <center>
    <h2>User-Created Locations</h2>
    <table>
      <thead>
        <tr>
         <!-- <th>Latitude</th>
         <th>Longitude</th> -->
          <th>Address</th>
          <th>Title</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @places.each do |place| %>
          <tr>
            <!-- <td><%= place.latitude %></td>
            <td><%= place.longitude %></td> -->
            <td><%= place.address %></td>
            <td><%= place.title %></td>
            <td><%= link_to 'Choose Location', place, :controller => 'places', :action => 'choose' %></td>
            <td><%= link_to 'Show', place %></td>
            <td><%= link_to 'Edit', edit_place_path(place) %></td>
            <td><%= link_to 'Destroy', place, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <button><%= link_to 'New Place', new_place_path %></button>
    <h3>You selected: <%= @chosen[:title] %></h3>
    </center>
  </div>
</div>
<br>



