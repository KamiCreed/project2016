<% provide(:title, @user.username) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.username %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <h3>Player</h3>
    <table class="player">
      <tr>
        <td>Health: <%= @player.health %></td>
      </tr>
      <tr>
        <td>Level: <%= @player.level %></td>
        <td>Experience: <%= @player.experience %></td>
      </tr>
      <tr>
        <td>Strength: <%= @player.strength %></td>
        <td>Defense: <%= @player.defense %></td>
      </tr>
      <tr>
        <td>Gold: <%= @player.gold %></td>
      </tr>
    </table>
  </div>
</div>