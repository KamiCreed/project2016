<% provide(:title, 'Hub') %>
<!-- Using gmaps4rails for the map, geo_ip for user_location -->
<center>
  <%= link_to "Start Game!", game_path, action: 'get'%>
<h1><strong>You Are In: </strong>
  <%= @user_location[:country_name] %></h1>


<div style='width: 1000px;'>
  <div id="geolocation" style='width: 1000px; height: 600px;'></div>
</div>
</center>

</div>
<div class="container">
  <ul class="setup_links center">
    <li><%= link_to "Quests", "#" %></li>
    <li><%= link_to "Shop", "#" %></li>
  </ul>
</div>


<script src="//maps.google.com/maps/api/js?v=3.18&sensor=false&client=&key=&libraries=geometry&language=&hl=&region="></script> 
<script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/infobox/1.1.9/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->

<script>
var handler = Gmaps.build('Google');
handler.buildMap({ internal: {id: 'geolocation'} }, function(){
  if(navigator.geolocation)
    navigator.geolocation.getCurrentPosition(displayOnMap);
});

function displayOnMap(position){
  var marker = handler.addMarker({
    lat: position.coords.latitude,
    lng: position.coords.longitude
  });
  //handler.map.centerOn(marker);
  handler.getMap().setZoom(2);
  
  var vancouver = handler.addMarker({
    lat: <%= @vancouver[:lat] %>,
    lng: <%= @vancouver[:lng] %>,
    "infowindow": "<%= @vancouver[:title]  %> [<%= @vancouver[:lat]  %>, <%= @vancouver[:lng]  %>]"
  });
  
  var paris = handler.addMarker({
    lat: <%= @paris[:lat] %>,
    lng: <%= @paris[:lng] %>,
    title: 'Paris, France',
    "infowindow": "<%= @paris[:title]  %> [<%= @paris[:lat]  %>, <%= @paris[:lng]  %>]"
  });
  
  var tokyo = handler.addMarker({
    lat: <%= @tokyo[:lat] %>,
    lng: <%= @tokyo[:lng] %>,
    title: 'Tokyo, Japan',
    "infowindow": "<%= @tokyo[:title]  %> [<%= @tokyo[:lat]  %>, <%= @tokyo[:lng]  %>]"
  });
  
  var sydney = handler.addMarker({
    lat: <%= @sydney[:lat] %>,
    lng: <%= @sydney[:lng] %>,
    title: 'Sydney, Australia',
    "infowindow": "<%= @sydney[:title]  %> [<%= @sydney[:lat]  %>, <%= @sydney[:lng]  %>]"
  });
  
  var cairo = handler.addMarker({
    lat: <%= @cairo[:lat] %>,
    lng: <%= @cairo[:lng] %>,
    title: 'Cairo, Egypt',
    "infowindow": "<%= @cairo[:title]  %> [<%= @cairo[:lat]  %>, <%= @cairo[:lng]  %>]"
  });
  
  var brasilia = handler.addMarker({
    lat: <%= @brasilia[:lat] %>,
    lng: <%= @brasilia[:lng] %>,
    title: 'Brasilia, Brazil',
    "infowindow": "<%= @brasilia[:title]  %> [<%= @brasilia[:lat]  %>, <%= @brasilia[:lng]  %>]"
  });
};
</script>